<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:ejb="http://java.sun.com/xml/ns/javaee/ejb-jar_3_0.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_0.xsd"
	version="3.0">
	<enterprise-beans>
		<!--Imixs JEE EJBs -->
		<session>
			<ejb-name>EntityServiceBean</ejb-name>
			<ejb-class>org.imixs.workflow.jee.ejb.EntityServiceBean</ejb-class>
			<session-type>Stateless</session-type>
		</session>
		<session>
			<ejb-name>ModelServiceBean</ejb-name>
			<ejb-class>org.imixs.workflow.jee.ejb.ModelServiceBean</ejb-class>
			<session-type>Stateless</session-type>
		</session>
		<session>
			<ejb-name>WorkflowServiceBean</ejb-name>
			<ejb-class>org.imixs.workflow.jee.ejb.WorkflowServiceBean</ejb-class>
			<session-type>Stateless</session-type>
			<!--  Mail Configuration -->
			<env-entry>
				<description> Mail Plugin Session name</description>
				<env-entry-name>IX_MAIL_SESSION</env-entry-name>
				<env-entry-type>java.lang.String</env-entry-type>
				<env-entry-value>mail/org.imixs.workflow.jee.mailsession</env-entry-value>
			</env-entry>
			<!-- Plugin Service EJBs -->
			<ejb-ref>
                    <ejb-ref-name>ejb/EntityServiceBean</ejb-ref-name>
                    <ejb-ref-type>Session</ejb-ref-type>
                    <remote>org.imixs.workflow.jee.ejb.EntityService</remote>
            </ejb-ref>
			<ejb-ref>
                    <ejb-ref-name>ejb/ProfileServiceBean</ejb-ref-name>
                    <ejb-ref-type>Session</ejb-ref-type>
                    <remote>org.imixs.sywapps.business.ProfileService</remote>
            </ejb-ref>
			<ejb-ref>
                    <ejb-ref-name>ejb/ProjectServiceBean</ejb-ref-name>
                    <ejb-ref-type>Session</ejb-ref-type>
                    <remote>org.imixs.sywapps.business.ProjectService</remote>
            </ejb-ref>
             <ejb-ref>
                    <ejb-ref-name>ejb/SequenceServiceBean</ejb-ref-name>
                    <ejb-ref-type>Session</ejb-ref-type>
                    <remote>org.imixs.sywapps.business.SequenceService</remote>
            </ejb-ref>
            <ejb-ref>
                    <ejb-ref-name>ejb/InvitationServiceBean</ejb-ref-name>
                    <ejb-ref-type>Session</ejb-ref-type>
                    <remote>org.imixs.sywapps.business.InvitationService</remote>
            </ejb-ref>
            
			<!-- Mail rsource -->
			<resource-ref>
				<res-ref-name>mail/org.imixs.workflow.jee.mailsession</res-ref-name>
				<res-type>javax.mail.Session</res-type>
				<res-auth>Container</res-auth>
				<res-sharing-scope>Shareable</res-sharing-scope>
			</resource-ref>


		</session>
		
		<!-- #### Scheduled Workflow EJBs -->
		<session>
			<ejb-name>WorkflowSchedulerBean</ejb-name>
			<ejb-class>
				org.imixs.workflow.jee.ejb.WorkflowSchedulerBean</ejb-class>
			<session-type>Stateless</session-type>
		</session>
		
		
		<session>
			<ejb-name>ReportServiceBean</ejb-name>
			<ejb-class>org.imixs.workflow.jee.ejb.ReportServiceBean</ejb-class>
			<session-type>Stateless</session-type>
		</session>

		


		<!-- #### Project specific EJBs -->
		<session>
			<ejb-name>ProjectServiceBean</ejb-name>
			<ejb-class>org.imixs.sywapps.business.ProjectServiceBean</ejb-class>
			<session-type>Stateless</session-type>
		</session>

		<session>
			<ejb-name>ProfileServiceBean</ejb-name>
			<ejb-class>org.imixs.sywapps.business.ProfileServiceBean</ejb-class>
			<session-type>Stateless</session-type>
		</session>

		<session>
			<ejb-name>ConfigServiceBean</ejb-name>
			<ejb-class>org.imixs.sywapps.business.ConfigServiceBean</ejb-class>
			<session-type>Stateless</session-type>
		</session>

		<session>
			<ejb-name>WorkitemServiceBean</ejb-name>
			<ejb-class>org.imixs.sywapps.business.WorkitemServiceBean</ejb-class>
			<session-type>Stateless</session-type>
		</session>

	
	</enterprise-beans>
</ejb-jar>